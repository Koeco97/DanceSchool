CREATE DATABASE `dance_school`;

USE `dance_school`;
CREATE TABLE `person` (
                          `id` bigint auto_increment primary key,
                          `first_name` varchar(255) null,
                          `second_name` varchar(255) null,
                          `last_name` varchar(255) null,
                          `birthday` date null ,
                          `sex` varchar(255) null,
                          `e_mail` varchar(255) null,
                          `phone_number` varchar(255) null,
                          `login` varchar(255) null,
                          `password` varchar(255) null
);

USE `dance_school`;
CREATE TABLE `teacher` (
                           `id` bigint NOT NULL AUTO_INCREMENT,
                           foreign key (`id`) references `person` (`id`)
);

USE `dance_school`;
CREATE TABLE `dance` (
                         `id` bigint auto_increment primary key,
                         `name` varchar(255) null
);

USE `dance_school`;
CREATE TABLE `group` (
                         `id` bigint auto_increment primary key,
                         `group_level` bigint null,
                         `teacher_id` bigint null,
                         `dance_id` bigint null,
                         constraint `group_dance_constraint`
                             foreign key (`dance_id`) references `dance` (`id`),
                         constraint `group_teacher_constraint`
                             foreign key (`teacher_id`) references `teacher` (`id`)
);

USE `dance_school`;
CREATE TABLE `client` (
                          `id` bigint auto_increment primary key,
                          `group_id` bigint null,
                          foreign key (`id`) references `person` (`id`),
                          constraint `client_group_constraint`
                              foreign key (`group_id`) references `group` (`id`)
);

USE `dance_school`;
CREATE TABLE `lesson` (
                          `id` bigint auto_increment primary key,
                          `date` datetime null,
                          `group_id` bigint null,
                          `comment` varchar(255) null,
                          constraint `class_group_constraint`
                              foreign key (`group_id`) references `group` (`id`)
);

